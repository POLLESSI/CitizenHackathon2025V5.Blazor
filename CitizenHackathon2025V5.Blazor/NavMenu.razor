@* NavMenu.razor *@
<nav class="nav-container">
    <div class="nav-header">
        <a href="/" class="logo"><b>Welcome</b></a>
        <button class="nav-toggle" @onclick="ToggleNavMenu" aria-label="Toggle navigation">
            <span class="hamburger"></span>
        </button>
        <DarkModeToggle />
    </div>

    <NavLink href="/crowdinfoview" Match="NavLinkMatch.All">
        <span class="oi oi-people" aria-hidden="true"></span> CROWD INFO
    </NavLink>
    @* <NavLink href="/crowdcalendar" Match="NavLinkMatch.Prefix">
        <span class="oi oi-calendar" aria-hidden="true"></span> Crowd Calendar
    </NavLink> *@

    <ul class="nav-links @(collapseNavMenu ? "collapsed" : "")">
        @if (IsHomePage)
        {
            @foreach (var item in MenuItems)
            {
                <li>
                    <NavLink href="@item.Href" @onclick="CloseMenu" class="nav-link" ActiveClass="active">
                        @item.Icon @item.Text
                    </NavLink>
                </li>
            }
        }
        else
        {
            <li><NavLink href="/" @onclick="CloseMenu">Back Home</NavLink></li>
        }
    </ul>
</nav>





























































































