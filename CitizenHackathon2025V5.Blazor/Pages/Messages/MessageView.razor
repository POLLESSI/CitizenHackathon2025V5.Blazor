@page "/messageview"
@using CitizenHackathon2025.Blazor.DTOs;
@inject IJSRuntime js

<h3>Messages / Feedback</h3>

<div class="page-list">
    <div class="list-toolbar">
        <div class="left">
            <input class="input-compact"
                   placeholder="Your message..."
                   @bind="_newContent"
                   @bind:event="oninput" />
        </div>
        <div class="right">
            <button class="chip add-chip" @onclick="SendAsync">Send</button>
        </div>
    </div>

    <div class="table-wrapper draggable-container"
         @ref="ScrollContainerRef"
         @onscroll="HandleScroll"
         style="height: 300px; overflow-y: auto; border: 1px solid #444;">
        <table class="table table-striped table-dark styled-table data-list">
            <thead>
                <tr>
                    <th>#</th>
                    <th>When</th>
                    <th>Source</th>
                    <th>Content</th>
                </tr>
            </thead>
            <tbody>
                @if (!_messages.Any())
                {
                    <tr>
                        <td colspan="99">
                            <div class="empty-state">No messages yet.</div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var m in _messages)
                    {
                        <tr>
                            <td>@m.Id</td>
                            <td>@m.CreatedAt.ToLocalTime().ToString("g")</td>
                            <td>@(m.SourceType ?? "N/A") @m.RelatedName</td>
                            <td>@m.Content</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<Globe />










































































































