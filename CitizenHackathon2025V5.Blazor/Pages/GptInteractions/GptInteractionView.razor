@page "/gptinteractionview"
@using CitizenHackathon2025V5.Blazor.Client.Models;
@using CitizenHackathon2025.Blazor.DTOs
@using CitizenHackathon2025V5.Blazor.Client.Constants
@using CitizenHackathon2025V5.Blazor.Client.DTOs
@inject IJSRuntime js

<span class="fas fa-certificate me-2"></span> Gpt Interactions

<div class="page-list">
    <h3>Gpt Interactions List</h3>
    <div class="list-toolbar">
        <div class="left">
            <input class="input-compact" placeholder="Rechercher..."
                   @bind="_q" @bind:event="oninput" />
            @if (!string.IsNullOrWhiteSpace(_q))
            {
                <span class="badge badge-info">“@_q”</span>
            }
        </div>

        <div class="right">
            <button class="chip @( _onlyRecent ? "active" : null )"
                    @onclick="() => ToggleRecent()">
                Récents
            </button>
        </div>
    </div>
        <div class="table-wrapper draggable-container"
                @ref="ScrollContainerRef"
                @onscroll="HandleScroll"
                style="height: 300px; overflow-y: auto; border: 1px solid #444;">
            <table class="table table-striped table-dark styled-table data-list">
                <thead>
                    <tr>
                        <th class="col-narrow">#</th>
                        <th class="col-narrow">Prompt</th>
                        <th class="col-narrow">Response</th>
                        <th class="col-actions">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!FilterGpt(visibleGptInteractions).Any())
                    {
                      <tr>
                        <td colspan="99">
                            <div class="empty-state">Aucun élément pour ces filtres.</div>
                        </td>
                      </tr>
                    }
                    else
                    {
                    @foreach (var gp in FilterGpt(visibleGptInteractions))
                        {
                            <tr>
                                <td class="text-ellipsis" title="@gp.Prompt">@gp.Prompt</td>
                                <td class="text-ellipsis" title="@gp.Response">@gp.Response</td>
                                <td class="col-actions">
                                    <button class="btn btn-sm btn-outline-info" @onclick="() => ClickInfo(gp.Id)">Info</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
</div>
          

<hr />

@if (SelectedId > 0)
{
  <div class="detail-wrapper">
    <div class="list-toolbar">
      <div class="left"><span class="badge badge-info">Détail #@SelectedId</span></div>
      <div class="right">
        <button class="chip" @onclick="() => SelectedId = 0">Fermer</button>
      </div>
    </div>
        <GptInteractionDetail Id="@SelectedId" />
  </div>
}

@if (!FilterGpt(visibleGptInteractions).Any())
{
    <div class="oz-empty">No items for these filters.</div>
}

@code {
#nullable disable
    private List<GptInteractionModel> allGptInteractions = new(); // All elements
    private List<GptInteractionModel> visibleGptInteractions = new(); // Those to display
    private int batchSize = 5;
    private int currentIndex = 0;
    private ElementReference ScrollContainerRef;

    protected override void OnInitialized()
    {
        var now = DateTime.UtcNow;
        // Simulates a data source
        for (int i = 1; i <= 50; i++)
        {
            allGptInteractions.Add(new GptInteractionModel
            {
                Id = i,
                Prompt = "",
                Response = "",
                CreatedAt = now.AddMinutes(-i * 10)
            });
        }

        LoadMoreItems();
    }

    private void LoadMoreItems()
    {
        var nextItems = allGptInteractions.Skip(currentIndex).Take(batchSize);
        visibleGptInteractions.AddRange(nextItems);
        currentIndex += batchSize;
    }

    private async Task HandleScroll()
    {
        var scrollTop = await js.InvokeAsync<int>("getScrollTop", ScrollContainerRef);
        var scrollHeight = await js.InvokeAsync<int>("getScrollHeight", ScrollContainerRef);
        var clientHeight = await js.InvokeAsync<int>("getClientHeight", ScrollContainerRef);

        if (scrollTop + clientHeight >= scrollHeight - 5 && currentIndex < allGptInteractions.Count)
        {
            LoadMoreItems();
            StateHasChanged();
        }
    }
    private string _q;
    private bool _onlyRecent, _onlyFav;

    private IEnumerable<GptInteractionModel> FilterGpt(IEnumerable<GptInteractionModel> source)
    {
        var q = _q?.Trim();
        var cutoff = DateTime.UtcNow.AddHours(-6);

        return source
            .Where(x => string.IsNullOrEmpty(q)
                        || (x.Prompt ?? "").Contains(q, StringComparison.OrdinalIgnoreCase)
                        || (x.Response ?? "").Contains(q, StringComparison.OrdinalIgnoreCase))
            .Where(x => !_onlyRecent || x.CreatedAt >= cutoff);
    }

    private void ToggleRecent() => _onlyRecent = !_onlyRecent;
}















































































