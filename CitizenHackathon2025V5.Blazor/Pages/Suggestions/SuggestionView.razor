@page "/suggestionview"
@using CitizenHackathon2025V5.Blazor.Client.Constants
@using CitizenHackathon2025.Blazor.DTOs;
@implements IAsyncDisposable
@inject IJSRuntime js

<span class="fas fa-certificate me-2"></span> Suggestions

<div class="page-list">
    @* <h3>Suggestion List</h3> *@
    <div class="list-toolbar">
        <div class="left">
            <input class="input-compact" placeholder="Search..."
                   @bind="_q" @bind:event="oninput" />
            @if (!string.IsNullOrWhiteSpace(_q))
            {
                <span class="badge badge-info">“@_q”</span>
            }
        </div>

        <div class="right">
            <button class="chip @( _onlyRecent ? "active" : null )"@onclick="() => ToggleRecent()">Recents</button>
        </div>
        <div>
            <NavLink class="chip add-chip" href="/suggestioncreate">
                Add
            </NavLink>
        </div>
    </div>
    <div class="oz-map-shell">
        @* <div id="@_mapId" class="leaflet-host"></div> *@
        <div id="@_mapId" class="leaflet-host" data-oz-scope="@ScopeKey"></div>
    </div>
    <div class="table-wrapper draggable-container"
            @ref="ScrollContainerRef"
            @onscroll="HandleScroll"
            style="height: 300px; overflow-y: auto; border: 1px solid #444;">
        <table class="table table-striped table-dark styled-table data-list">
            <thead>
                <tr>
                    <th class="col-narrow">#</th>
                    <th class="col-narrow">Original Place</th>
                    <th class="col-narrow">Suggested Alternative</th>
                    <th class="col-narrow">Reason</th>
                    <th class="col-actions"></th>
                </tr>
            </thead>
            <tbody>
                @if (!FilterSuggestion(visibleSuggestions).Any())
                {
                    <tr><td colspan="99"><div class="empty-state">No suggestions available at the moment.</div></td></tr>
                }
                else
                {
                    @foreach (var (su, index) in FilterSuggestion(visibleSuggestions).Select((s, i) => (s, i + 1)))
                    {
                        <tr>
                            <td>@index</td>
                            <td class="text-ellipsis" title="@su.OriginalPlace">@su.OriginalPlace</td>
                            <td class="text-ellipsis" title="@su.SuggestedAlternatives">@su.SuggestedAlternatives</td>
                            <td class="text-ellipsis" title="@su.Reason">@su.Reason</td>
                            <td class="col-actions">
                                <button class="btn btn-sm btn-glow ev-chip" @onclick="() => ClickInfo(su.Id)">Info</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<Globe />

<hr />

@if (SelectedId > 0)
{
  <div class="detail-wrapper">
    <div class="list-toolbar">
      <div class="left"><span class="badge badge-info">Details #@SelectedId</span></div>
      <div class="right">
                <button class="chip" @onclick="() => SelectedId = 0">Close</button>
      </div>
    </div>
        <SuggestionDetail Id="@SelectedId" />
  </div>
}
@if (!FilterSuggestion(visibleSuggestions).Any())
{
    <div class="oz-empty">No items for these filters.</div>
}


















































































































