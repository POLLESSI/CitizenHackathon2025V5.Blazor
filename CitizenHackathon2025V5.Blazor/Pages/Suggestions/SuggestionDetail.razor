@page "/suggestion/{Id:int}"
@page "/suggestiondetail/{Id:int}"
@using CitizenHackathon2025V5.Blazor.Client.DTOs
@inject Blazored.Toast.Services.IToastService ToastService

<h3>Suggestion Detail</h3>

@if (CurrentSuggestion is not null)
{
    <div class="detail-container bordeaux-background">
        <p>Id User : @CurrentSuggestion.User_Id</p>
        <p>Date : @CurrentSuggestion.DateSuggestion</p>
        <p>Original Place : @CurrentSuggestion.OriginalPlace</p>
        <p>Suggested Alternative : @CurrentSuggestion.SuggestedAlternatives</p>
        <p>Reason : @CurrentSuggestion.Reason</p>
    </div>
}
else
{
    <p>Loading Suggestions details...</p>
}


