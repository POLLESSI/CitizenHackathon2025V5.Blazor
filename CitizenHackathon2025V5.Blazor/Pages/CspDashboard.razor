@page "/csp-dashboard"
@using System.Net.Http.Json
@using CitizenHackathon2025.Blazor.DTOs
@using CitizenHackathon2025.DTOs.Security
@inject HttpClient Http

<h3>??? CSP violations detected</h3>

@if (reports is null)
{
    <p><em>Loading...</em></p>
}
else if (reports.Count == 0)
{
    <p>No CSP violations detected yet.</p>
}
else
{
    <button class="btn btn-sm btn-danger mb-2" @onclick="ClearReports">?? Clear the logs</button>
    <table class="table table-sm table-striped">
        <thead class="table-dark">
            <tr>
                <th>Directive</th>
                <th>URI blocked</th>
                <th>Source</th>
                <th>File</th>
                <th>Line</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in reports)
            {
                <tr>
                    <td>@report.ViolatedDirective</td>
                    <td>@report.BlockedUri</td>
                    <td>@report.DocumentUri</td>
                    <td>@report.SourceFile</td>
                    <td>@report.LineNumber</td>
                </tr>
            }
        </tbody>
    </table>
}

<Globe />

@code {
    private List<CspReportContent>? reports; // nullable pendant le chargement

    protected override async Task OnInitializedAsync()
    {
        // ✅ évite CS8601
        reports = await Http.GetFromJsonAsync<List<CspReportContent>>("/csp-report/all") ?? new();
    }

    private async Task ClearReports()
    {
        await Http.DeleteAsync("/csp-report/clear");
        reports = new(); // reset côté UI
    }
}















































































