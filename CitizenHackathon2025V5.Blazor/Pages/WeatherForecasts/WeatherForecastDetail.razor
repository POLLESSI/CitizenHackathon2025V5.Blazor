<h3>Weather Forecast Detail</h3>

@if (CurrentWeatherForecast is not null)
{
    <div class="detail-container bordeaux-background">
        <p>DateWeather : @CurrentWeatherForecast.DateWeather</p>
        <p>TemperatureC : @CurrentWeatherForecast.TemperatureC</p>
        <p>Summary : @CurrentWeatherForecast.Summary</p>
        <p>RainfallNm : @CurrentWeatherForecast.RainfallNm</p>
        <p>Humidity : @CurrentWeatherForecast.Humidity</p>
        <p>WindSpeedKmh : @CurrentWeatherForecast.WindSpeedKmh</p>
    </div>
}
else
{
    <p>Loading Weather Forecasts details...</p>
}


