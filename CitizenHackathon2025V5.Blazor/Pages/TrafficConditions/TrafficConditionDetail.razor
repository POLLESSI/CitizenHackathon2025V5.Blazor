@page "/trafficcondition/{Id:int}"
@page "/trafficconditiondetail"
@page "/trafficconditiondetail/{Id:int}"
@using CitizenHackathon2025.Blazor.DTOs;
@inject Blazored.Toast.Services.IToastService ToastService

<h3>Traffic Condition Detail</h3>

@if (CurrentTrafficCondition is not null)
{
    <div class="detail-container bordeaux-background">
        <p>Latitude : @CurrentTrafficCondition.Latitude</p>
        <p>Longitude : @CurrentTrafficCondition.Longitude</p>
        <p>Date Condition : @CurrentTrafficCondition.DateCondition</p>
        <p>Incident Type : @CurrentTrafficCondition.IncidentType</p>
    </div>
}
else
{
    <p>Loading Traffic Conditions details...</p>
}



















































































