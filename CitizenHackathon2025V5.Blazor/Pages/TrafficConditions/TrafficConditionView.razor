@page "/trafficconditionview"
@using CitizenHackathon2025V5.Blazor.Client.Models;
@using CitizenHackathon2025.Blazor.DTOs
@using CitizenHackathon2025V5.Blazor.Client.Constants
@using CitizenHackathon2025V5.Blazor.Client.DTOs
@inject IJSRuntime js

<span class="fas fa-certificate me-2"></span> Traffic Conditions

<div class="page-list">
    <h3>Traffic Conditions List</h3>
    <div class="list-toolbar">
        <div class="left">
            <input class="input-compact" placeholder="Search for an incident..."
                   @bind="_q" @bind:event="oninput" />
            @if (!string.IsNullOrWhiteSpace(_q))
            {
                <span class="badge badge-info">“@_q”</span>
            }
        </div>

        <div class="right">
            <button class="chip @( _onlyRecent ? "active" : null )" @onclick="() => ToggleRecent()">Recent</button>
        </div>
    </div>
    <div>
        <div class="table-wrapper draggable-container"
                @ref="ScrollContainerRef"
                @onscroll="HandleScroll"
                style="height: 300px; overflow-y: auto; border: 1px solid #444;">
            <table class="table table-striped table-dark styled-table data-list">
                <thead>
                    <tr>
                        <th class="col-narrow">Incident Type</th>
                        <th class ="col-narrow">Level</th>
                        <th class="col-actions"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!FilterTraffic(visibleTrafficConditions).Any())
                    {
                        <tr><td colspan="99"><div class="empty-state">No incidents.</div></td></tr>
                    }
                    else
                    {
                        @foreach (var tr in FilterTraffic(visibleTrafficConditions))
                        {
                            <tr>
                                <td>@tr.IncidentType</td>
                                <span class="lvl @($"lvl--{tr.Level}")">@tr.Level</span>
                                <td>
                                    <button class="btn btn-sm btn-outline-info" @onclick="() => ClickInfo(tr.Id)">Info</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
            
@if (SelectedId > 0)
{
    <div class="detail-wrapper">
        <div class="list-toolbar">
            <div class="left"><span class="badge badge-info">Détail #@SelectedId</span></div>
            <div class="right">
                <button class="chip" @onclick="() => SelectedId = 0">Fermer</button>
            </div>
        </div>
        <TrafficConditionDetail Id="@SelectedId" />
    </div>
}
@if (!FilterTraffic(visibleTrafficConditions).Any())
{
    <div class="oz-empty">No items for these filters.</div>
}

@code {
#nullable disable
    private List<TrafficConditionModel> allTrafficConditions = new(); // All elements
    private List<TrafficConditionModel> visibleTrafficConditions = new(); // Those to display
    private int batchSize = 30;
    private int currentIndex = 0;
    private ElementReference ScrollContainerRef;

    protected override void OnInitialized()
    {
        var now = DateTime.UtcNow;
        // Simulates a data source
        for (int i = 1; i <= 50; i++)
            allTrafficConditions.Add(new TrafficConditionModel {
                Id = i,
                IncidentType = $"Traffic {i}",
                Description = i % 2 == 0 ? "Accident" : "Bouchon",
                Level = new[] { "Low", "Medium", "High" }[i % 3],
                DateCondition = now.AddMinutes(-i * 10)
            });

        LoadMoreItems();
    }

    private void LoadMoreItems()
    {
        var nextItems = allTrafficConditions.Skip(currentIndex).Take(batchSize);
        visibleTrafficConditions.AddRange(nextItems);
        currentIndex += batchSize;
    }

    private async Task HandleScroll()
    {
        var scrollTop = await js.InvokeAsync<int>("getScrollTop", ScrollContainerRef);
        var scrollHeight = await js.InvokeAsync<int>("getScrollHeight", ScrollContainerRef);
        var clientHeight = await js.InvokeAsync<int>("getClientHeight", ScrollContainerRef);

        if (scrollTop + clientHeight >= scrollHeight - 5 && currentIndex < allTrafficConditions.Count)
        {
            LoadMoreItems();
            StateHasChanged();
        }
    }
    private string _q;
    private bool _onlyRecent, _onlyFav;

    private IEnumerable<TrafficConditionModel> FilterTraffic(IEnumerable<TrafficConditionModel> source)
    {
        var q = _q?.Trim();
        var cutoff = DateTime.UtcNow.AddHours(-6); 

        return source
            .Where(x => string.IsNullOrEmpty(q)
                        || (x.IncidentType ?? "").Contains(q, StringComparison.OrdinalIgnoreCase)
                        || (x.Description ?? "").Contains(q, StringComparison.OrdinalIgnoreCase))
            .Where(x => !_onlyRecent || x.DateCondition >= cutoff);
    }

    private void ToggleRecent() => _onlyRecent = !_onlyRecent;
}
